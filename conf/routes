# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.Application.index
GET     /list                       controllers.Application.showList
GET     /show-place/:id             controllers.Application.showPlace(id: Int)

GET     /add-place                  controllers.Application.showPlaceForm()
POST    /add-place                  controllers.Application.upload()

GET     /picture/:id                controllers.PlaceController.retrievePictureOfPlace(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)