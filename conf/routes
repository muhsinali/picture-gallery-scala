# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.Application.index
GET     /list                       controllers.Application.showList
GET     /grid                       controllers.Application.showGrid


POST     /places/add                controllers.PlaceController.create(id: Int, name: String, country: String, description: String, pictureURL: String)
GET      /places                    controllers.PlaceController.findByName(name: String)

# Used to retrieve images of a place
GET      /picture/:id               controllers.PlaceController.retrievePictureOfPlace(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)